<plugin id="com.fusiongrokker.plugins.Prettify" name="Prettify" version="1.0" provider-name="Adam Tuttle | http://fusiongrokker.com" class="Prettify.Handler">

	<description><![CDATA[ Uses Google's Prettify.js syntax highlighter to add syntax highlighting to &lt;PRE&gt;&lt;/PRE&gt; blocks.<br/>
	<br/>
	Written by <a href="http://fusiongrokker.com">Adam Tuttle</a><br/>
	Find the latest version at: <a href="http://fusiongrokker.com/page/projects">FusionGrokker</a> ]]></description>

	<requiresVersion match="greaterOrEqual">1.3</requiresVersion>

	<listens>
		<event name="beforeHtmlHeadEnd" type="synch" priority="0" />
		<event name="beforeHtmlBodyEnd" type="synch" priority="0" />
	</listens>
	
	<!-- copy support files to assets folder -->
	<assets>
		<asset dir="assets" />
	</assets>
	
</plugin>
